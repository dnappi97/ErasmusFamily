<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chatrequest_textview_request_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Chat Request"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonchat_request_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_select_photo_button"
        android:text="Avvia chat"
        app:layout_constraintEnd_toEndOf="@+id/chatrequest_textview_request_chat"
        app:layout_constraintStart_toStartOf="@+id/chatrequest_textview_request_chat"
        app:layout_constraintTop_toBottomOf="@+id/chatrequest_textview_request_chat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="181dp"
        android:layout_marginLeft="181dp"
        android:layout_marginEnd="229dp"
        android:layout_marginRight="229dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonchat_request_chat" />
</androidx.constraintlayout.widget.ConstraintLayout>